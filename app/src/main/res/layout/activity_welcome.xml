<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    >

    <ImageView
        android:id="@+id/backgroundMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/blueback" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="255dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/motivational"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/gallery"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/motivational"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@+id/hello"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="The aim of art is to represent not the outward appearance of things, but their inward significance."
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="273dp" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/motivational"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="307dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintBottom_toTopOf="@id/food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="5dp"
        android:background="@color/blueDark"
        android:clickable="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="Painting is silent poetry, and poetry is painting that speaks."
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="364dp" />



    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/food"
        app:layout_constraintBottom_toTopOf="@+id/exercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="5dp"
        android:background="@color/blueDark"
        android:clickable="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="482dp" />

    <TextView
        android:id="@+id/exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintBottom_toTopOf="@id/logoExercise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="When you slow down enough to sculpt, you discover all kinds of things you never noticed before."
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="493dp" />

    <ImageView
        android:id="@+id/logoExercise"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/exercise"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/skulptura"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="526dp" />


    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logoExercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        android:text="LOG OUT"
        android:gravity="right"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="674dp"
        android:background="@color/blueDark"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/motivational"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toRightOf="@+id/hello"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="235dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blueDark"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hello"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Name: "
        android:textSize="19dp"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:textSize="19dp"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="262dp" />



</androidx.constraintlayout.widget.ConstraintLayout>